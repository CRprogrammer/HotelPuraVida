<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> PuraVida ~ @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar navbar-inverse" id="NwBar">
            <div class="container">
                <img src="~/Content/img/Logo.png" />
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        <div class="container">
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("¡Reserva YA!", "NewReservation", "OrderReservations")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Nosotros<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("● Contáctenos", "Contact", "Home")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("● Sobre nosotros", "About", "Home")</li>
                        </ul>
                    </li>
                    @if (User.IsInRole("Adm"))
                    {

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administración<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("● Hoteles", "Index", "Hotel")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("● Cuartos", "Index", "Room")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("● Reservaciones", "Index", "Reservation")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("● Usuarios", "Index", "Users")</li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <div>
            <footer>
                <p>
                    All rights reserverd &copy; @DateTime.Now.Year - ¡Pura Vida! Hotel reservations || Another <a href="https://www.facebook.com/oscar.gonzalez.946179">M&M</a> Design <img src="~/Content/img/LeftLogo.png" alt="" />
                </p>

                <div>
                    <a href="https://www.facebook.com/oscar.gonzalez.946179"><img src="~/Content/img/Socials/fb2.png" class="grayscale" /></a>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
