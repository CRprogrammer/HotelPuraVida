@model IEnumerable<HotelPuraVida.ModelView.UserViewModels>

@{
    ViewBag.Title = "Index";
}

<h1>Administrador de  Usuarios</h1>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMail)
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMail)
            </td>
           
            <td>
                @Html.ActionLink("Roles", "Roles", new { userID = item.UserID }, new { @class = "btn btn-primary" })
               
            </td>
        </tr>
    }

</table>
