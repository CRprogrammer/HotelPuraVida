@model HotelPuraVida.ModelView.UserViewModels
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="margin-top:80px;">Roles</h2>
<h3 style="color:red">@ViewBag.Error</h3>

@using (Html.BeginForm("AddRole", "Users", new { userID = Model.UserID }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="padding-bottom:150px;">
        <h4>Agregar roles para @Model.Name</h4>
        <div class="form-group">
            @Html.LabelFor(model => model.Role.RoleID, "RoleID", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="col-md-10">
            @Html.DropDownList("RoleID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Role.RoleID, "", htmlAttributes: new { @class = "text-dange" })
        </div>
        <div class="col-md-10">
            <br /><br />
            <input type="submit" value="Add Role" class="btn btn-success" />
            @Html.ActionLink("Return to user", "Roles", new { userID = Model.UserID }, new { @class = "btn btn-info" })
        </div>
    </div>


}