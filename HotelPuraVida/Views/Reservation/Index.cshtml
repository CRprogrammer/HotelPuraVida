@model IEnumerable<HotelPuraVida.Models.ReservationModel>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-top:80px">Reservaciones</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new {@class = "btn btn-warning" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.People)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.People)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomID)
        </td>       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ReservationID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Details", "Details", new { id=item.ReservationID }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id=item.ReservationID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
